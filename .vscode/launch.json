{
    // IntelliSense を使用して利用可能な属性を学べます。
    // 既存の属性の説明をホバーして表示します。
    // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for rdebug-ide",
            "type": "Ruby",
            "request": "attach",
            "cwd": "${workspaceRoot}",
            "remoteHost": "127.0.0.1",
            "remotePort": "1234",
            "remoteWorkspaceRoot": "${workspaceRoot}",
        },
        {
            "type": "ruby-debug",
            "request": "launch",
            "name": "Launch File",
            "program": "${workspaceFolder}/${command:AskForProgramName}",
            "programArgs": ["server"],
            "useBundler": false
        },
        {
            "name": "Rails server",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/bin/rails",
            "args": [
                "server"
            ]
        },
        {
            "type": "ruby-debug",
            "request": "launch",
            "name": "Rails Debug",
            "program": "${workspaceRoot}/bin/rails",
            "programArgs": [
                "s"
            ],
            "useBundler": false
        }
    ]
}