# setup rbenv
set :rbenv_type, :system
set :rbenv_ruby, '2.4.1'
set :rbenv_prefix, "env LD_LIBRARY_PATH=/opt/local/lib:/opt/PostgreSQL/9.6/lib:/usr/local/lib RBENV_ROOT=#{fetch(:rbenv_path)} RBENV_VERSION=#{fetch(:rbenv_ruby)} #{fetch(:rbenv_path)}/bin/rbenv exec"

namespace :deploy do
  desc "Upload files under node_modules directory."
  task :node_modules do
    node_modules_directories = Dir.glob("node_modules/*")
    on roles(:app) do
      node_modules_directories.each do |node_modules_dir|
        unless test "[ -d #{shared_path}/node_modules/#{node_modules_dir} ]"
          execute "/bin/mkdir -p #{shared_path}/#{node_modules_dir}/"
        end
        puts "#{node_modules_dir}" + " => " + "#{shared_path}/"
        upload! "#{node_modules_dir}", "#{shared_path}/node_modules/", {recursive: true, mkdir: true}
      end
    end
  end
end